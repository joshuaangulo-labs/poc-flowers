<div class="page-content">
    <div class="page-header">
        <div class="page-header-content">
            <h1>Birthday Flowers Schedule</h1>
            <p class="page-subtitle">Annual delivery for Emily Johnson</p>
        </div>
        <div class="page-header-actions">
            <button class="btn btn-ghost">Pause</button>
            <a href="#edit" class="btn btn-secondary" data-route="/Application/Schedules/Form?id=@ViewData["ScheduleId"]">Edit</a>
        </div>
    </div>

    <div class="detail-grid">
        <div class="detail-section">
            <h2>Schedule Details</h2>
            <dl class="detail-list">
                <dt>Gift</dt>
                <dd>Birthday Flowers</dd>
                <dt>Beneficiary</dt>
                <dd>Emily Johnson</dd>
                <dt>Frequency</dt>
                <dd>Annual</dd>
                <dt>Date</dt>
                <dd>March 15</dd>
            </dl>
        </div>

        <div class="detail-section">
            <h2>Status</h2>
            <dl class="detail-list">
                <dt>Status</dt>
                <dd><span class="badge badge-success">Active</span></dd>
                <dt>Next Delivery</dt>
                <dd>March 15, 2026</dd>
                <dt>Deliveries Completed</dt>
                <dd>2</dd>
                <dt>Created</dt>
                <dd>January 10, 2024</dd>
            </dl>
        </div>
    </div>

    <div class="detail-section full-width">
        <h2>Delivery History</h2>
        <div class="timeline">
            <div class="timeline-item">
                <div class="timeline-date">Mar 15, 2026</div>
                <div class="timeline-content">
                    <span class="badge badge-pending">Scheduled</span>
                    <span>Next delivery</span>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-date">Mar 15, 2025</div>
                <div class="timeline-content">
                    <span class="badge badge-success">Delivered</span>
                    <span>Spring bouquet delivered</span>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-date">Mar 15, 2024</div>
                <div class="timeline-content">
                    <span class="badge badge-success">Delivered</span>
                    <span>Spring bouquet delivered</span>
                </div>
            </div>
        </div>
    </div>
</div>
